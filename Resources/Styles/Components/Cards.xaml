<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style x:Key="ModernCard" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=White, Dark=#2D3436}"/>
        <Setter Property="BorderColor" Value="{AppThemeBinding Light=#DFE6E9, Dark=#1A1A1A}"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="15"/>
        <Setter Property="HasShadow" Value="True"/>
        <Setter Property="Shadow">
            <Shadow Brush="#40000000" Offset="0,5" Radius="12" Opacity="0.2"/>
        </Setter>
        <Setter Property="Margin" Value="0,0,0,15"/>
    </Style>

</ResourceDictionary>